<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createPhoneTypesTable" author="Sergei Ragaev">
        <createTable tableName="phone_types">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="phone_types_pkey"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet id="createContactPhonesTable" author="Sergei Ragaev">
        <createTable tableName="contact_phones">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="phones_pkey"/>
            </column>
            <column name="type_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="contact_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_deleted" type="boolean"/>
        </createTable>
    </changeSet>

</databaseChangeLog>