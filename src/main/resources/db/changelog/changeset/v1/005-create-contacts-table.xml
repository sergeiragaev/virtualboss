<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createContactsTable" author="Sergei Ragaev">
        <createTable tableName="contacts">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="contacts_pkey"/>
            </column>

            <column name="created_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="modified_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="insurance_date" type="date"/>
            <column name="workers_comp_date" type="date"/>
            <column name="comments" type="VARCHAR(255)"/>
            <column name="company" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="fax" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="notes" type="TEXT"/>
            <column name="notes_rtf" type="TEXT"/>
            <column name="phones" type="VARCHAR(255)"/>
            <column name="profession" type="VARCHAR(255)"/>
            <column name="spouse" type="VARCHAR(255)"/>
            <column name="supervisor" type="VARCHAR(255)"/>
            <column name="tax_id" type="VARCHAR(255)"/>
            <column name="web_site" type="VARCHAR(255)"/>
            <column name="is_deleted" type="boolean"/>

            <column name="custom_field1" type="VARCHAR(255)"/>
            <column name="custom_field2" type="VARCHAR(255)"/>
            <column name="custom_field3" type="VARCHAR(255)"/>
            <column name="custom_field4" type="VARCHAR(255)"/>
            <column name="custom_field5" type="VARCHAR(255)"/>
            <column name="custom_field6" type="VARCHAR(255)"/>
            <column name="custom_list1" type="VARCHAR(255)"/>
            <column name="custom_list2" type="VARCHAR(255)"/>
            <column name="custom_list3" type="VARCHAR(255)"/>
            <column name="custom_list4" type="VARCHAR(255)"/>
            <column name="custom_list5" type="VARCHAR(255)"/>
            <column name="custom_list6" type="VARCHAR(255)"/>

        </createTable>
    </changeSet>

</databaseChangeLog>